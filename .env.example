# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=/api

# Logging
LOG_LEVEL=info

# Default provider
AI_DEFAULT_PROVIDER=bedrock  # Options: bedrock, openai, anthropic
AI_ENABLE_FALLBACK=true      # Enable fallback to another provider if primary fails
AI_FALLBACK_PROVIDER=openai  # Provider to use as fallback

# Bedrock configuration
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=amazon.titan-text-premier-v1:0
AWS_BEDROCK_MAX_TOKENS=1000
AWS_BEDROCK_TEMPERATURE=0.3

# OpenAI configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL_ID=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Anthropic configuration
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL_ID=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.3